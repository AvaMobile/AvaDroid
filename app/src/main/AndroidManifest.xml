<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avadroid.avadroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".stretch_goal_files.HomeActivity" />
        <activity android:name=".stretch_goal_files.NewTransactionActivity" />
        <activity android:name=".stretch_goal_files.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".stretch_goal_files.ViewInvoicesActivity" />
        <activity android:name=".stretch_goal_files.ReviewInvoiceActivity" />
        <activity android:name=".TaxInformationActivity" />
        <activity android:name=".TaxInfoReview"></activity>
    </application>

</manifest>